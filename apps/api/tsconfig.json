{
  "extends": "@mambaPanel/config/typescript/nest.json",
  "compilerOptions": {
    "baseUrl": "./",
    "skipLibCheck": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "paths": {
      "@/*": ["src/*"],
      "@mambaPanel/security": ["../../packages/security/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
