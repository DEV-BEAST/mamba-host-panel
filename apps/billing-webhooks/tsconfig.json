{
  "extends": "@mambaPanel/config/typescript/base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "../../packages/db/src/**/*",
    "../../packages/types/src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
