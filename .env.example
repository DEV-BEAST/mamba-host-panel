# ============================================
# Mamba Host Panel - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# IMPORTANT: Generate secure secrets for production!

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://mamba:password@localhost:5432/mambapanel

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# JWT & AUTHENTICATION
# ============================================
# Generate secure secrets with: openssl rand -base64 32
JWT_SECRET=changeme-generate-secure-secret-minimum-32-characters
JWT_REFRESH_SECRET=changeme-generate-different-secure-secret
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# NextAuth (Auth.js)
NEXTAUTH_SECRET=changeme-generate-nextauth-secret-32-characters
NEXTAUTH_URL=http://localhost:3000

# ============================================
# ENCRYPTION
# ============================================
# Master encryption key for envelope encryption (AES-256-GCM)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=changeme-generate-32-byte-hex-key-64-characters

# ============================================
# API CONFIGURATION
# ============================================
# Backend API
API_URL=http://localhost:3001
API_PORT=3001

# Frontend (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:3001

# Wings Daemon
WINGS_API_URL=http://localhost:8080
WINGS_PORT=8080

# Worker
WORKER_PORT=3003

# Billing Webhooks
BILLING_WEBHOOKS_PORT=3002

# ============================================
# STRIPE (BILLING)
# ============================================
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# ============================================
# EMAIL (SMTP)
# ============================================
# Email provider configuration (Resend, SendGrid, Gmail, etc.)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@mambahost.com
EMAIL_FROM_NAME=Mamba Host

# ============================================
# OAUTH PROVIDERS
# ============================================
# Discord OAuth
# Create app at: https://discord.com/developers/applications
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Google OAuth
# Create app at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# STORAGE (MinIO / S3)
# ============================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=mamba-backups
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# ============================================
# MONITORING & OBSERVABILITY
# ============================================
# Sentry (Error Tracking) - Optional
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_SAMPLE_RATE=0.1

# Prometheus (Metrics) - Optional
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV=development
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_LOGIN=5
RATE_LIMIT_LOGIN_WINDOW=900000

# Session
SESSION_MAX_AGE=86400000

# ============================================
# FEATURES FLAGS
# ============================================
FEATURE_EMAIL_VERIFICATION=true
FEATURE_2FA=true
FEATURE_DISCORD_NOTIFICATIONS=false

# ============================================
# PRODUCTION SETTINGS (Uncomment for production)
# ============================================
# NODE_ENV=production
# LOG_LEVEL=warn
# HTTPS=true
# SECURE_COOKIES=true
# NEXTAUTH_URL=https://your-domain.com

# ============================================
# DOCKER COMPOSE OVERRIDES
# ============================================
# Uncomment these if using docker-compose
# POSTGRES_USER=mamba
# POSTGRES_PASSWORD=password
# POSTGRES_DB=mambapanel
# REDIS_PASSWORD=
